                android:textSize="22sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!--LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@android:color/black"></LinearLayout-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="331dp"
            android:layout_height="112dp"
            android:layout_gravity="center">

            <Button
                android:text="밴드 설정"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/goToBandSettings"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:gravity="left|center"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <Button
                android:text="약통 설정"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/goToPillBoxSettings"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:gravity="left|center"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:weightSum="1"
            android:paddingLeft="15dp">

            <TextView
                android:text="어플리케이션 정보 "
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:id="@+id/textView50"
                android:gravity="bottom"
                android:textSize="22sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!--LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="@android:color/black"></LinearLayout-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="331dp"
            android:layout_height="112dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/button52"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:text="업데이트"
                android:gravity="left|center"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <Button
                android:text="현재 버전"
                android:layout_height="wrap_content"
                android:id="@+id/goToCurrentVersion"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:gravity="left|center"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color"
                android:layout_width="331dp"/>
        </LinearLayout>

    </LinearLayout>
