                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:id="@+id/textView55"
                android:textSize="22sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="bottom" />
        </LinearLayout>

        <!--LinearLayout
            android:orientation="vertical"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="@android:color/black"></LinearLayout-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="331dp"
            android:layout_height="157dp"
            android:layout_gravity="center">

            <Button
                android:text="가족 등록 요청"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/goToSendFr"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color"
                android:gravity="left|center"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>


            <Button
                android:text="가족 등록 요청 관리"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/goToFrAdmin"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color"
                android:gravity="left|center"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <Button
                android:text="가족 확인 "
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:id="@+id/goToFamilyList"
                android:drawableRight="@drawable/go_to_activity_icon"
                android:background="@drawable/buttonwhite"
                android:textColor="@color/menu_text_color"
                android:gravity="left|center"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:weightSum="1"
            android:paddingLeft="15dp">

            <TextView
