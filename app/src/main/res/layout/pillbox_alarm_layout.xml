<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/background_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="20dp"
        android:background="@android:color/holo_blue_dark"
        android:weightSum="1">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/presDayView"
            android:textSize="24sp"
            android:layout_weight="0.50"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/presPharmacyView"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="아침"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:textSize="24sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/morningAlarmView"
                    android:layout_weight="0.32"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/morningMediView"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>



        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/pillbox_not_taken"-->
            <!--android:id="@+id/morningCheck"-->
            <!--android:layout_weight="0.12"-->
            <!--/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용"
            android:layout_marginBottom="8dp"
            android:id="@+id/morningAlarmBtn"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray">
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="점심"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:textSize="24sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/afternoonAlarmView"
                    android:layout_weight="0.32"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/afternoonMediView"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>



        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/pillbox_taken"-->
            <!--android:id="@+id/afternoonCheck"-->
            <!--android:layout_weight="0.34" />-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/afternoonAlarmBtn"
            />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="저녁"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11"
                    android:textSize="24sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/eveningAlarmView"
                    android:layout_weight="0.32"
                    android:textSize="20sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eveningMediView"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복용"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/eveningAlarmBtn"
            />


    </LinearLayout>


    <Button
        android:id="@+id/setAlarmBtn"
        android:text="알람 시간 설정"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        />

</LinearLayout>
